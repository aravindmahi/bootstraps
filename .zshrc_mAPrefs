# common settings
# ---------------
alias l='ls'
alias c='clear'

export EDITOR=vim

# key bindings for mac
# --------------------
bindkey "^[[1~" beginning-of-line
bindkey "^[[3~" delete-char
bindkey "^[[4~" end-of-line


# history
# -------
setopt APPEND_HISTORY           
# share history between zsh processes 
#setopt INC_APPEND_HISTORY     
#setopt SHARE_HISTORY

LISTMAX=0                      # automaticaly decide when to page a list of completions
MAILCHECK=0                    # disable mail checking
